{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "architecture": "x64",
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "BUILD_TESTS": "OFF",
        "SKSE_SUPPORT_XBYAK": "ON",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_OVERLAY_PORTS": "${sourceDir}/cmake/ports/",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md",
        "CMAKE_CXX_FLAGS": "/EHsc /MP /W4 /WX $penv{CXXFLAGS}"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64",
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true
        }
      },
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "build-release",
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "build-debug",
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "build-wait-debugger",
      "inherits": [
        "build-debug"
      ],
      "cacheVariables": {
        "WAIT_FOR_DEBUGGER": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "build-release",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "debug",
      "configurePreset": "build-debug",
      "configuration": "Debug"
    },
    {
      "name": "wait-debugger",
      "configurePreset": "build-wait-debugger",
      "configuration": "Debug"
    }
  ]
}
